<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
			
			<bean id="ltime" class="java.time.LocalTime" factory-method="now"></bean>
			<bean id="ldate" class="java.time.LocalDate" factory-method="now"></bean>           
           <!-- spring bean dependent class objects reference -->
           
           <!-- to inject the dependent spring bean class object reference to target spring bean class object -->
           <bean id="wmg" class="com.sai.sbean.WishMessageGenerator" > <!-- target spring bean -->
           <constructor-arg name="lTime" ref="ltime"></constructor-arg>
           <constructor-arg name="lDate" ref="ldate"></constructor-arg>
           </bean>
</beans>
           
           